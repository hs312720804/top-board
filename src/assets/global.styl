body
  padding 0
  margin 0
  overflow hidden
html,body,#app
  height 100%
  background #0b0b1e
a
  text-decoration none
  outline 0
  padding 0
  color $color-info
  &:hover
    color $color-actived
.header
  display flex
  align-items center
  padding 10px 0
  position relative
  z-index 1000
  background-color #fff
  border-bottom 1px solid #dae0ec
  // box-shadow 0 4px 8px rgba(0, 0, 0, 0.03), 0 3px 7px rgba(0, 0, 0, 0.02), 0 2px 6px rgba(0, 0, 0, 0.01)
  .nav
    height 60px
    line-height 60px
.el-main
  background #ebeef4
  padding 14px
  height calc(100vh - 60px)
  .page-code--child
    position relative
.clearfix:after
  height 0
  display block
  clear both
  content ''
  overflow hidden
[class*=' el-icon-cc'],[class^='el-icon-cc']
  font-family 'iconfont' !important
  font-size 16px
  font-style normal
  -webkit-font-smoothing antialiased
  -moz-osx-font-smoothing grayscale
.el-menu
  border none
.el-menu--horizontal>.el-menu-item,.el-menu--horizontal>.el-submenu .el-submenu__title
  height 51px
  line-height 51px
.source
  padding 14px
.white-bg
  background #fff
.card
  margin-bottom 14px
.system-setting
  width 50px
  height 50px
  line-height 50px
  border-left 1px solid #e6e6e6
  text-align center
  cursor pointer
  margin-left 10px
  font-size 20px
.system-setting :hover
  background #e6e6e6
.setting_side
  height auto
  width 260px
  padding 20px
  box-sizing border-box
  background #fff
  color #333
  font-size 14px
  .layout
    padding 1px 0
  h5
    margin 0 0 14px
    font-size 14px
.tagnav_switch
  padding-bottom 14px
  margin-bottom 15px
  border-bottom 1px solid #EBEEF5
  font-size 14px
  line-height 28px
.group__mb
  margin-bottom 10px
.group__ml20
  margin-left 20px
.group__ml10
  margin-left 10px
.content-card.add-page
  overflow auto
  padding-bottom 14px
  // height 100vh
  box-sizing border-box
  display flex
  flex-direction column
  position absolute
  top 0px
  left 0px
  z-index 100
  width 100%
.content-card__footer
  height 50px
  line-height 50px
  background-color white
  border-top 1px solid #f0f0f0
  .sub-foot
    text-align right
    padding-right 50px
.content-card__main
  padding 14px !important
  flex 1
  overflow auto
.go-back
  i
    font-size 12px
.c-no-data
  color $color-disabled
  text-align center
  display flex
  justify-content center
  align-items center
  margin auto
  width 100%
  height 100%
  padding 10px
  box-sizing border-box